{{#each posts as |post|}}
  <div class="container" data-post-id={{post.id}}>
    <h1 class="post-title">{{post.title}}
      <span id="created-date">Posted by
        {{post.user.username}}
        on
        {{post.date_created}}</span></h1>

    <p class="post-content">{{post.content}}</p>
  </div>
{{/each}}

<script src="/js/home.js"></script>